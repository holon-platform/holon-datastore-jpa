<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.holon-platform</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.3</version>
	</parent>

	<groupId>com.holon-platform.jpa</groupId>
	<artifactId>holon-datastore-jpa-root</artifactId>
	<version>5.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>${project.groupId}:${project.artifactId}</name>
	<description>Holon JPA Datastore root pom</description>

	<url>https://holon-platform.com</url>

	<organization>
		<name>Holon TDCN</name>
		<url>https://holon-platform.com</url>
	</organization>

	<licenses>
		<license>
			<name>Apache License Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Holon development team</name>
			<email>dev@holon-platform.com</email>
			<organization>Holon TDCN</organization>
			<organizationUrl>https://holon-platform.com</organizationUrl>
		</developer>
	</developers>

	<issueManagement>
		<url>https://github.com/holon-platform/holon-datastore-jpa/issues</url>
		<system>GitHub Issues</system>
	</issueManagement>

	<scm>
		<connection>scm:git:https://github.com/holon-platform/holon-datastore-jpa.git</connection>
		<url>https://github.com/holon-platform/holon-datastore-jpa</url>
		<developerConnection>scm:git:https://github.com/holon-platform/holon-datastore-jpa.git</developerConnection>
	</scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- pre-releases package name -->
		<bintray.package>holon-datastore-jpa</bintray.package>

		<!-- Holon core -->
		<holon.core.version>5.0.0-SNAPSHOT</holon.core.version>
		<!-- Holon JDBC -->
		<holon.jdbc.version>5.0.0-SNAPSHOT</holon.jdbc.version>

		<!-- JPA -->
		<hibernate.jpa.api.version>1.0.0.Final</hibernate.jpa.api.version>

		<!-- ORM -->
		<hibernate.version>5.2.10.Final</hibernate.version>
		<eclipselink.version>2.6.4</eclipselink.version>

		<!-- Hibernate validator -->
		<hibernate.validator.version>5.4.0.Final</hibernate.validator.version>

		<!-- HikariCP -->
		<hikaricp.version>2.6.2</hikaricp.version>

		<!-- ByteBuddy -->
		<bytebuddy.version>1.6.9</bytebuddy.version>

		<!-- Test: H2 -->
		<h2.version>1.4.193</h2.version>

	</properties>

	<modules>
		<module>core</module>
		<module>spring</module>
		<module>spring-boot</module>
		<module>starter-hibernate</module>
		<module>starter-eclipselink</module>
		<module>bom</module>
		<module>documentation</module>
	</modules>

	<profiles>
		<profile>
			<id>apidocs</id>
			<build>
				<plugins>
					<!-- Aggregate javadocs -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<executions>
							<execution>
								<id>aggregate-javadocs</id>
								<phase>package</phase>
								<inherited>false</inherited>
								<goals>
									<goal>aggregate-jar</goal>
								</goals>
								<configuration>
									<show>public</show>
									<excludePackageNames>*.internal.*;*.examples.*</excludePackageNames>
									<quiet>true</quiet>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>